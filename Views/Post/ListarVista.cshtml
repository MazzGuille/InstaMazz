
@{
    ViewData["Title"] = "ListarVista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

<table class="table table-bordered">
       <thead>
           <tr>
               <th class="hidden">IdPost</th>
               <th class="hidden">IdUsuario</th>
               <th>UrlImg</th>
               <th>descripcion</th>
               
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach(var item in Model)
           {
             <tr>
                 <td>@item.IdPost</td>
                 <td class="hidden">@item.IdUsuario</td>
                 <td>@item.UrlImg</td>
                 <td>@item.Descripcion</td>                 
                 <td>                      
                     <a asp-action="EliminarPost" asp-controller="Post" class="btn btn-danger btn-sm" asp-route-IdPost="@item.IdPost"><i class="bi bi-person-x"></i> Eliminar</a>
                 </td>
             </tr>  
           }
       </tbody>          
       
   </table>
</div>

